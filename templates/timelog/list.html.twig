{% extends 'base.html.twig' %}

{% block title %}Timelogs view{% endblock %}

{% block body %}
    <div class="container">
        <h1>Timelog view</h1>

        <div class="accordion" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseOne"
                            aria-expanded="true" aria-controls="collapseOne">
                        Filters
                    </button>
                </h2>

                <div id="collapseOne" class="row accordion-collapse collapse" aria-labelledby="headingOne"
                     data-bs-parent="#accordionExample">
                    <div class="col-md-9">
                    </div>
                    <div class="col-md-3">
                        {{ form_start(form) }}
                        <label for="project_name" class="form-label"> {{ form_label(form.project) }}</label>
                        {{ form_widget(form.project, {'attr': {'class': 'form-control' }}) }}

                        <label for="project_name" class="form-label"> {{ form_label(form.datePreselect) }} <span class="text-warning">do not mix</span></label>
                        {{ form_widget(form.datePreselect, {'attr': {'class': 'form-control' }}) }}

                        <label for="project_name" class="form-label"> {{ form_label(form.dateGiven) }} <span class="text-warning">do not mix</span></label>
                        {{ form_widget(form.dateGiven, {'attr': {'class': 'form-control' }}) }}

                        {# Not used #}
                        <label for="project_name" class="form-label"> Select only if more than XX hours</label>
                        {{ form_widget(form.hours, {'attr': {'class': 'form-control', 'disabled':'disabled' }}) }}
                        <br>
                        {{ form_widget(form.submit) }}
                        <p style="display: inline-block">
                        {{ form_widget(form.download) }}
                        </p>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>


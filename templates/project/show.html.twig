{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <div class="container">
        <h1>Project detials</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ project.created ? project.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('project_index') }}"><i class="fa fa-chevron-left"
                                                                         aria-hidden="true"></i> back to list</a>

        <a class="btn btn-secondary" href="{{ path('project_edit', {'id': project.id}) }}">edit</a>

        {{ include('project/_delete_form.html.twig') }}

    </div>
{% endblock %}
